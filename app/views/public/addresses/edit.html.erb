<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">配送先編集</span></h3>
  </div>

  <%= form_with model: @address do |f| %>

    <form>
      <div class="form-group row">
        <%= f.label :郵便番号, class:"col-sm-3 col-form-label" %>
        <div class="col-md-3">
         <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :住所, class:"col-sm-3 col-form-label" %>
        <div class="col-md-6">
         <%= f.text_field :address, autocomplete: "address", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :宛名, class:"col-sm-3 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, autocomplete: "name", class:"form-control" %>
        </div>
        <span>
        <div class="col">
          <%= f.submit "変更内容を保存", class:"btn btn-success btn-block btn-sm" %>
        </div>
        </span>
      </div>
      </div>
    </form>
  <% end %>
</div>

