<div class="container">
    <div class="row mt-5 ">
      <div class="col-2">
        <table class="table table-bordered mt-4">
          <thead>
            <tr>
              <th class="text-center">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre|  %>
              <tr>
                <td><%= link_to genre.name, items_path(sort:"#{genre.name}") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-10">
        <h3>商品検索</h3>
          <div class="row">
            <% @items.each do|item| %>
            <div class="col-3">
              <p><%= image_tag item.get_item_image(150,150)%></p>
              <p><%= link_to item.name,item_path(item) %></p>
              <p>¥<%= item.price %></p>
            </div>
            <% end %>
          </div>
          <%= paginate @items %>
      </div>
    </div>
</div>
