<div class="container">
  <div class="row">
    <h4 class="p-3"><span class="header">注文履歴一覧</span></h4>
  </div>

  <div class="row-md-10">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-light"><h5 class=p-2>注文日</h5></th>
            <th class="table-light"><h5 class=p-2>配送先</h5></th>
            <th class="table-light"><h5 class=p-2>注文商品</h5></th>
            <th class="table-light"><h5 class=p-2>支払金額</h5></th>
            <th class="table-light"><h5 class=p-2>ステータス</h5></th>
            <th class="table-light"><h5 class=p-2>注文詳細</h5></th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.post_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
              </td>
              <td>
                <% @order_items.each do |order_item| %>
                  <%= order_item.item.name %>
                <% end %>
              </td>
              <td><%= order.total_payment %></td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to "表示する",  order_path(order.id), class: "btn btn-sm btn-primary" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
