<div class="container">
  <div class="row">
    <h4 class="p-3"><span class="header">注文履歴詳細</span></h4>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h5 class="p-3">注文情報</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="table-light"><h5 class=p-2>注文日</h5></td>
              <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            </tr>
            <tr></tr>
              <td class="table-light"><h5 class=p-2>配送先</h5></td>
              <td>
                  <%= @order.post_code%><br>
                  <%= @order.address%>
              </td>
            </tr>
            <tr>
              <td class="table-light"><h5 class=p-2>支払い方法</h5></td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td class="table-light"><h5 class=p-2>ステータス</h5></td>
              <td><%= @order.order_status_i18n  %></td>
            </tr>
          </thead>
        </table>
      </div>

    <div class="col-md-5">
      <h5 class="p-3">請求情報</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="table-light"><h5 class=p-2>商品合計</h5></td>
              <td>¥<%= @order.total_payment - @order.shipping_cost %></td>
            </tr>
            <tr></tr>
              <td class="table-light"><h5 class=p-2>配送料</h5></td>
              <td>¥<%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="table-light"><h5 class=p-2>ご請求金額</h5></td>
              <td>¥<%= @order.total_payment%></td>
            </tr>
          </thead>
        </table>
      </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h5 class="p-3">注文内容</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-light"><h5 class=p-2>商品</h5></th>
              <th class="table-light">単価（税込）</th>
              <th class="table-light">個数</th>
              <th class="table-light">小計</th>
            </tr>
          </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= (order_item.price*1.1).floor%></td>
            <td><%= order_item.quantity %></td>
            <td><%= ((order_item.price*1.1).floor)*(order_item.quantity)%></td>
          </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>

