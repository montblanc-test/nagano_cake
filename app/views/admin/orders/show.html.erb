<div class='container'>
  <div class="row">
    <h3 class="col-4 text-center"><p style="background-color: #efefef">注文履歴詳細</p></h3>
    <table class="col-12">
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.family_name %><%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.post_code %><%= @order.address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
            <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
            <%= f.submit "更新" ,class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <br>
  <div class="row">
    <table class='col-8 table table-md-responsive '>
      <tr bgcolor="#efefef">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
      <% @order_items.each do |order_item| %>
      <tr>
        <th><%= order_item.item.item_name %></th>
        <th><%= order_item.item.with_tax_price %></th>
        <th><%= order_item.amount %></th>
        <th><%= order_item.item.with_tax_price * order_item.amount %></th>
        <th>
          <%= form_with(model:[@order, order_item], url: admin_order_order_item_path(order_id: @order, id: order_item.id), method: :patch, local: true) do |f| %>
           <%= f.select :making_status, OrderItem.making_statuses_i18n.invert, {prompt: false} %>
           <%= f.submit "更新" ,class: "btn btn-success" %>
          <% end %>
        </th>
      </tr>
      <% end %>
    </table>
    <div class='col-4 align-self-end'>
      <div class="d-flex flex-md-column">
        <div class="p-2"><strong>商品合計</strong> <%= @order.total_payment - @order.shipping_cost%>円</div>
        <div class="p-2"><strong>送料</strong> <%= @order.shipping_cost %>円</div>
        <div class="p-2"><strong>請求金額 <%= @order.total_payment %>円</strong></div>
        <br>
      </div>
    </div>
  </div>
</div>