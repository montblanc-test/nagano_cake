<%= form_with model:genre,url:admin_genres_path,local: true do |f| %>
  <div class ="row">
    <div class="col-md-3 text-center">ジャンル名</div>
      <div class="col-md-3 text-center">
        <%= f.text_field :name, autocomplete: "name", class:"form form-control form-inline",placeholder: 'ジャンル名' %>
      </div>
      <div class="col-md-3 text-center">
        <%= f.submit '   　新規登録　   ', class: "btn btn-sm btn-success btn-inline ml-5" %>
      </div>
    </div>
<% end %>