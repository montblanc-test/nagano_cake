<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>商品一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <% if item.is_status? %>
                  <span class="label label-success">販売中</span>
                  <span class="label label-secondary">販売停止中</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <div class="row">
    <%= paginate @items %>
  </div>
</div>