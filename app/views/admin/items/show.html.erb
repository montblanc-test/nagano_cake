<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>商品詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_item_image(250,250) %>
  </div>
  <div class="col-md-9">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td><label>商品名</label></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><label>商品説明</label></td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td><label>ジャンル</label></td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            <label>税込価格</label>
            <label>(税抜き価格)</label>
          </td>
          <td><%= @item.with_tax_price %>(<%= @item.with_price %>)円</td>
        </tr>
        <tr>
          <td><label>販売ステータス</label></td>
          <td>
            <%= @item.is_status_i18n %>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
  </div>
</div>