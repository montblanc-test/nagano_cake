<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3><%= @customer.family_name %>  <%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>
  <div class="row">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><label>会員ID</label></td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td><label>氏名</label></td>
            <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td><label>フリガナ</label></td>
            <td><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td><label>郵便番号</label></td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td><label>住所</label></td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td><label>電話番号</label></td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td><label>メールアドレス</label></td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td><label>会員ステータス</label></td>
            <td>
              <% if @customer.is_deleted == true %>
                <span class="label label-success">有効</span>
              <% else %>
                <span class="label label-secondary">退会</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="text-center">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
        </div>
        <div class="text-center">
          <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary ml-5" %>
        </div>
      </div>
  </div>

