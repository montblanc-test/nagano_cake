<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.family_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted? %>
                <span class="label label-success">有効</span>
              <% else %>
                <span class="label label-secondary">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="">
      <%= paginate @customers %>
    </div>
  </div>
</div>